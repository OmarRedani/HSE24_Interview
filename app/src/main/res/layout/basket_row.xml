<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_toLeftOf="@id/iv_remove_basket">
        <ImageView
                android:id="@+id/iv_product_basket"
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:layout_margin="6dp"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
        >
            <TextView
                    android:id="@+id/tv_name_basket"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/urw_form_semi_cond_regular"
                    android:textSize="18sp"
                    android:gravity="center_vertical"

            />
            <TextView
                    android:id="@+id/tv_price_basket"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/urw_form_semi_cond_regular"
                    android:textSize="18sp"
                    android:gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>


    <ImageView
            android:id="@+id/iv_remove_basket"
            android:layout_width="wrap_content" android:layout_height="100dp"
               android:padding="16dp"
               android:src="@drawable/ic_remove_circle"
               android:layout_alignParentRight="true"

    />
    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/line_color"
            android:layout_below="@id/ll"
            android:layout_marginTop="6dp"
    />

</RelativeLayout>